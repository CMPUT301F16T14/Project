<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_detail_and_accept"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.linkai.beep.RequestDetailAndAcceptActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:id="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView12"
        android:id="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView12"
        android:textSize="20sp" />

    <Button
        android:text="Accept This Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:id="@+id/AcceptButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_above="@+id/AcceptButton"
        android:layout_marginBottom="97dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:text="Total price:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="End:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="20sp"
        android:layout_above="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_toStartOf="@+id/textView11" />

    <TextView
        android:text="Start: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:layout_above="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_toStartOf="@+id/textView15" />

    <TextView
        android:text="Rider Name:    "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:layout_above="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:clickable="true"
        android:layout_alignTop="@+id/textView8"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView8"
        android:contextClickable="true"/>

</RelativeLayout>
