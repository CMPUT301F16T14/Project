<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text=" Set as the end location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_start_location_button"
        android:layout_alignStart="@+id/set_start_location_button"
        android:id="@+id/set_end_location_button"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:text="Set as the start location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_start_location_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light" />
</RelativeLayout>