<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rider_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.ualberta.cs.linkai.beep.RiderMainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/source"
        android:hint="Source"
        android:layout_toStartOf="@+id/placerequest" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/source"
        android:id="@+id/destination"
        android:layout_alignParentStart="true"
        android:hint="Destination"
        android:layout_alignEnd="@+id/source" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="ca.ualberta.cs.linkai.beep.RiderMainActivity"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/destination" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/placerequest"
        android:id="@+id/search"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/source"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:onClick="onSearch"/>

    <Button
        android:text="PlaceRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placerequest"
        android:layout_alignBaseline="@+id/destination"
        android:layout_alignBottom="@+id/destination"
        android:layout_alignParentEnd="true"
        android:textSize="16sp" />
</RelativeLayout>

