<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.linkai.beep.DriverMainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nameTextView"
        android:layout_marginTop="103dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/phoneTextView"
        android:textSize="30dp"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_alignEnd="@+id/nameTextView"
        android:clickable="true"
        android:autoLink="phone"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/emailTextView"
        android:layout_below="@+id/phoneTextView"
        android:layout_alignStart="@+id/phoneTextView"
        android:layout_marginTop="75dp"
        android:textSize="30dp"
        android:layout_alignEnd="@+id/phoneTextView"
        android:clickable="true"
        android:autoLink="email"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameIcon"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_toStartOf="@+id/phoneTextView"
        android:src="@drawable/name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneIcon"
        android:layout_alignTop="@+id/phoneTextView"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/phoneTextView"
        android:layout_toStartOf="@+id/phoneTextView"
        android:src="@drawable/phone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailIcon"
        android:layout_alignTop="@+id/emailTextView"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/emailTextView"
        android:layout_toStartOf="@+id/emailTextView"
        android:src="@drawable/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE THIS GUY !"
        android:id="@+id/chooseAcceptanceButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/emailTextView" />
</RelativeLayout>