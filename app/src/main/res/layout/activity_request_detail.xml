<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.linkai.beep.RequestDetailActivity_CONFIRMED">

    <TextView
        android:text="From:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/to"
        android:textSize="20sp"
        android:layout_below="@+id/from"
        android:layout_alignStart="@+id/from"
        android:layout_toStartOf="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/from"
        android:id="@+id/StartAddress"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/to"
        android:layout_toEndOf="@+id/from"
        android:id="@+id/DestAddress"
        android:textSize="20sp"
        android:layout_alignRight="@+id/to"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car"
        android:layout_toEndOf="@+id/car"
        android:id="@+id/CarInfo"
        android:textSize="18sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/date"
        android:textSize="20sp"
        android:layout_above="@+id/Driver" />

    <TextView
        android:text="Driver's vehicle:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Driver:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Driver"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/DriverName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverName"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/DriverInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/DestAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateInfo"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/DestAddress"
        android:layout_above="@+id/Driver"
        android:layout_alignTop="@+id/date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverInfo"
        android:layout_above="@+id/CarInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="I arrive the destination AND pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrive_pay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cancel Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelrequest"
        android:layout_above="@+id/arrive_pay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>